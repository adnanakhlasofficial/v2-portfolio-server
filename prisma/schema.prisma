generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id          String   @id @default(uuid())
  username    String   @unique
  name        String
  email       String   @unique
  password    String
  profile     String?
  bio         String?
  description String?
  story       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  techSkills  TechSkill[]
  tools       Tool[]
  softSkills  SoftSkill[]
  blogs       Blog[]
  projects    Project[]
  experiences Experience[]
}

model TechSkill {
  id       String  @id @default(cuid())
  name     String
  category String? // e.g., "Frontend", "Backend", "Language", etc.

  adminId String
  admin   Admin  @relation(fields: [adminId], references: [id])
}

model Tool {
  id   String  @id @default(cuid())
  name String
  type String? // e.g., "IDE", "Version Control", "DevOps", etc.

  adminId String
  admin   Admin  @relation(fields: [adminId], references: [id])
}

model SoftSkill {
  id          String  @id @default(cuid())
  name        String
  description String? // e.g., "Ability to communicate effectively"

  adminId String
  admin   Admin  @relation(fields: [adminId], references: [id])
}

model Blog {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  description String
  thumbnail   String
  content     String // Rich text (HTML or Markdown)
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  adminId String
  admin   Admin  @relation(fields: [adminId], references: [id])
}

model Project {
  id             String   @id @default(uuid())
  slug           String   @unique
  title          String
  description    String
  category       String
  tags           String[]
  content        String? // JSON or Markdown
  thumbnail      String // URL to image
  liveLink       String // URL to live site
  clientRepoLink String // URL to GitHub or other repo
  serverRepoLink String // URL to GitHub or other repo
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  adminId String
  admin   Admin  @relation(fields: [adminId], references: [id])
}

model Experience {
  id          String    @id @default(uuid())
  slug        String    @unique
  role        String // e.g., "Frontend Developer"
  company     String // e.g., "BdCalling Ltd. (SM Technology)"
  location    String // e.g., "Dhaka, Bangladesh"
  startDate   DateTime
  endDate     DateTime?
  description String // Rich text or Markdown
  achievement String[]
  tags        String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  adminId String
  admin   Admin  @relation(fields: [adminId], references: [id])
}
